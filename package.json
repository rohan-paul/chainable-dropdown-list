{
  "name": "ReactDropDown",
  "version": "1.0.0",
  "description": "A chained dropdown UI with React",
  "main": "server.js",
  "scripts": {
    "webpack": "webpack",
    "build": "webpack --config webpack.config.js",
    "client-install": "npm start --prefix client",
    "start": "npm run webpack && nodemon --exec babel-node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "author": "Rohan Paul",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.0",
    "express": "^4.16.3",
    "html-webpack-plugin": "^3.2.0",
    "mongoose": "^5.1.7",
    "webpack": "^4.12.2"
  },
  "devDependencies": {
    "nodemon": "^1.17.5",
    "webpack-cli": "^3.0.8"
  }
}
