{
  "name": "ReactDropDown",
  "version": "1.0.0",
  "description": "A chained dropdown UI with React",
  "main": "server.js",
  "scripts": {
    "client-install": "npm start --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "author": "Rohan Paul",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^3.6.0",
    "express": "^4.16.3",
    "mongoose": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^1.17.5"
  }
}